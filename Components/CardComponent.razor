@* CardComponent.razor *@
<div class="card" style="width: 100%; background: white; padding-top: 20px; margin-bottom: 30px;box-shadow:0 3px 15px #0000001a;border-radius:15px;min-height: 100%;display: grid;margin-top:30px;">
    <div style="text-align: center;">
        <img src="@(HttpMainUrl+LogoUrl)" alt="Logo" style="margin: 10px auto; width: 150px; display: block;">
    </div>
    <div style="align-self: self-start;">
        <a href="@(HttpMainUrl+CardUrl)">
            <img src="@(HttpMainUrl+ProductUrl)" alt="Logo" style="margin: 0 auto; padding: 0; display: block; width: 100%; max-width: 400px !important;">
        </a>
    </div>
    <div style="padding: 20px; text-align: @TextOrientation; align-self: self-end;">
        <p style="font-size: 35px; font-weight: bold; line-height: 1; font-family: arial; margin-bottom: 10px; color: #ce2032; margin-top: 30px;">@Title1</p>
        <p style="font-size: 35px; color: #204184; font-weight: bold; margin-bottom: 0px; line-height: 35px;">@Title2</p>
        <p style="margin-bottom: 0; font-size: 18px;">@Paragraph1</p>
        <p style="margin-bottom: 20px; font-size: 18px;">@Paragraph2</p>
        <a href="@(HttpMainUrl+CardUrl)" class="cta-button"><label class="btn btn-danger p-add-button" style="background: #204184; border-color: #204184; height: 44px; color: white; width: 152px; text-align: center; border-radius: 25px; font-size: 16px; padding: 10px 0; font-weight: normal;">@CallToAction</label></a>
    </div>
</div>

@code{
    [Parameter]
    public string HttpMainUrl {get; set;} = "";
    [Parameter]       
    public string LogoUrl { get; set; } = "";
    [Parameter]
    public string ProductUrl {get; set;} = "";
    [Parameter]
    public string CardUrl {get; set;} = "";

    [Parameter]
    public string Title1 { get; set; } = "";

    [Parameter]
    public string Title2 { get; set; } = "";

    [Parameter]
    public string Paragraph1 { get; set; } = "";

    [Parameter]
    public string Paragraph2 { get; set; } = "";

    [Parameter]
    public string CallToAction { get; set; } = "";
    [Parameter]
    public string TextOrientation { get; set; } = "";
}
